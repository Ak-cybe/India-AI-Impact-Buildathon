# Agentic Honeypot API - Environment Variables
# Copy this to .env and fill in your values

# ===========================================
# Required API Keys
# ===========================================

# Google Gemini API Key (for LLM responses)
GOOGLE_API_KEY=your_gemini_api_key_here

# API Authentication Key (for your API)
API_KEY=your_secure_api_key_here

# ===========================================
# Callback Configuration
# ===========================================

# Evaluation endpoint (mandatory callback)
CALLBACK_ENDPOINT=https://hackathon.guvi.in/api/updateHoneyPotFinalResult

# ===========================================
# Server Configuration
# ===========================================

# Environment (development/production)
ENVIRONMENT=production

# API Host and Port
API_HOST=0.0.0.0
API_PORT=8000

# Logging Level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# ===========================================
# Conversation Settings
# ===========================================

# Maximum turns per conversation
MAX_CONVERSATION_TURNS=20

# Detection confidence threshold
CONFIDENCE_THRESHOLD=0.75

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=30

# ===========================================
# Optional: External Services
# ===========================================

# Google Safe Browsing API (for link checking)
# SAFE_BROWSING_API_KEY=

# Redis URL (for session persistence)
# REDIS_URL=redis://localhost:6379

# ===========================================
# Rate Limiting
# ===========================================

# Requests per minute per client
RATE_LIMIT_PER_MINUTE=60

# Requests per hour per client
RATE_LIMIT_PER_HOUR=1000
